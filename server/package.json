{
  "name": "server",
  "version": "1.0.0",
  "description": "Viral Views backend server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx index.ts",
    "build": "esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "test": "dotenv -e .env.test -- vitest run --coverage",
    "init-db": "dotenv -e .env.test -- tsx ./init-db.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@sendgrid/mail": "^8.1.5",
    "@types/cors": "^2.8.19",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "lru-cache": "^11.1.0",
    "memorystore": "^1.6.7",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "openid-client": "^6.6.4",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "vitest": "^3.2.4",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "24.3.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.18.1",
    "esbuild": "^0.25.9",
    "tsx": "^4.20.5",
    "typescript": "5.9.2"
  }
